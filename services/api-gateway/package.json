{
    "name": "@grahvani/api-gateway",
    "version": "1.0.0",
    "description": "Unified API Gateway for Grahvani Microservices",
    "main": "dist/server.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc && tsc-alias",
        "start": "node dist/server.js",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "dependencies": {
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-rate-limit": "^7.2.1",
        "helmet": "^7.1.0",
        "http-proxy-middleware": "^3.0.0",
        "morgan": "^1.10.0",
        "pino": "^9.0.0",
        "pino-http": "^10.0.0"
    },
    "devDependencies": {
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.12.7",
        "tsc-alias": "^1.8.8",
        "typescript": "^5.4.5"
    }
}